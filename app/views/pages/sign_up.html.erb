<% title "Sign Up" %>
<div class="container">
  <h1 class="text-center">Pairs Sign Up</h1>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= simple_form_for @user do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :email %>
        <%= f.input :username %>
        <%= f.input :skill_level, collection: User::SKILL_LEVELS.zip((0..2).to_a) %>
        <%= f.submit "Sign Up!", class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>
